#!/bin/bash

RED=$'\033[1;31m'
GREEN=$'\033[1;32m'
YELLOW=$'\033[1;33m'
BLUE=$'\033[1;34m'
PURPLE=$'\033[1;35m'
GRAY=$'\033[1;30m'
CYAN=$'\033[1;36m'
WHITE=$'\033[1;37m'
NC=$'\033[0m'

if [ -f "login" ]; then

    echo "${GREEN}Available${NC}"

    if ! "chmod +x *"; then
        echo "${RED}Exicute Permission provide Eroor${NC}"
    else
        echo "${GREEN}Exicute Permission Provide Done${NC}"
    fi

    if ! cp -f login ../usr/bin/; then
        echo "${RED}File [ login ] coppy Eroor${NC}"
    else
        echo "${GREEN}File [ login ] coppy Done ${NC}"
    fi

    if ! grep -q 'login' ../usr/etc/bash.bashrc; then
        if ! echo 'login' >> ../usr/etc/bash.bashrc; then
            echo "${RED}File can't set in .bashrc file${NC}"
        else
            echo "${GREEN}File set on .bas
